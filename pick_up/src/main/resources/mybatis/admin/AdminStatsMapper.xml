<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.admin.AdminStatsMapper">

    <!-- 获取所有兼职用户 -->
    <select id="getAllPartTimeUsers" resultType="org.example.pojo.PartTimePickupUser">
        SELECT * FROM part_time_pickup_users
    </select>
    
    <!-- 获取每日新增代取申请数量 -->
    <select id="getDailyNewApplicationsCount" resultType="java.util.Map">
        SELECT
            DATE(pickup_time) AS date,  <!-- 提取日期部分 -->
            COUNT(*) AS count           <!-- 统计数量 -->
        FROM
            pickup_applications
        GROUP BY
            DATE(pickup_time)           <!-- 按日期分组 -->
        ORDER BY
            date;                      <!-- 按日期排序 -->
    </select>
    
    <!-- TODO: 添加其他管理员统计相关的SQL查询 -->

</mapper> 